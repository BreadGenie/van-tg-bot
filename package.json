{
  "name": "van-tg-bot",
  "version": "1.0.0",
  "description": "A K-Pop Bot for Telegram ",
  "main": "src/bot.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "build-ts": "tsc",
    "postinstall": "npm run build-ts",
    "start": "npm run serve",
    "serve": "node built/bot.js",
    "watch-node": "nodemon src/bot.ts --ignore idols.json --ignore groups.json",
    "watch-ts": "tsc -w"
  },
  "engines": {
    "node": "14.15.1"
  },
  "author": "Bread Genie",
  "license": "GPL-3.0",
  "dependencies": {
    "@types/node-cron": "^2.0.4",
    "@types/node-fetch": "^2.5.12",
    "@types/node-telegram-bot-api": "^0.51.4",
    "cheerio": "^1.0.0-rc.9",
    "dotenv": "^8.6.0",
    "node-cron": "^3.0.0",
    "node-fetch": "^2.6.1",
    "node-telegram-bot-api": "^0.50.0",
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.0.0",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.1.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "node_modules/variables/.+\\.(j|t)sx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!variables/.*)"
    ]
  }
}
